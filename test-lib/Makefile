OBJS = ast.cmo parser.cmo scanner.cmo environment.cmo sast.cmo cast.cmo acc.cmo 

TARFILES = Makefile scanner.mll parser.mly ast.ml sast.ml environment.ml cast.ml acc.ml 

acc : $(OBJS)
	ocamlc -o acc $(OBJS)

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

acc.tar.gz : $(TARFILES)
	cd .. && tar czf acc/acc.tar.gz $(TARFILES:%=microc/%)

.PHONY : clean
clean :
	rm -f acc parser.ml parser.mli scanner.ml testall.log \
	*.cmo *.cmi *.out *.diff

